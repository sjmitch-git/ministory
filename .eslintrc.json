{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "next/core-web-vitals",
        "jest-dom",
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "jest-dom"
    ],
    "rules": {
    },
	"overrides": [
		{
			"files": ["**/*.test.jsx"],
			"env": {
				"jest": true
			}
		}
	]
}
